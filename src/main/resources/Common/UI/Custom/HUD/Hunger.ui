@ChickenTex = PatchStyle(TexturePath: "Pataepollo.png");

Group #HUD {
    LayoutMode: Bottom;
    Anchor: (Bottom: 140);

    Group #Container {
        LayoutMode: Left;
        Anchor: (Width: 332, Height: 20);

        Group #Icon {
            Background: @ChickenTex;
            Anchor: (Width: 20, Height: 20);
        }

        Group #Bar {
            Background: #2e1f11;
            Anchor: (Width: 300, Height: 12, Left: 8);
            LayoutMode: Left;

            Group #Fill {
                Background: #d18d49;
                Anchor: (Width: 300, Height: 12);
            }
        }
    }
}